@using Atut.Helpers;
@using Atut.Services
@using Atut.ViewModels
@using Microsoft.AspNetCore.Hosting

@inject IHostingEnvironment HostingEnvironment;

@model Atut.ViewModels.JourneyViewModel

@{
    ViewData["Title"] = "Edycja trasy";
}

@{ Html.RenderPartial("JourneyModelEditor"); }

@section Scripts {
    <script type="text/javascript">
        window.model = @Html.ToJson(Model);
        window.availableCountries = @Html.ToJson(CountriesHelper.Countries);
    </script>

    <script src="@Html.UrlWithVersion("/js/vendor.js", HostingEnvironment)"></script>
    <script src="@Html.UrlWithVersion("/js/journeyEdit.js", HostingEnvironment)"></script>
}