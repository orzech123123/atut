<script  type="text/x-template" id="items-editor-template">
    <div>
        <div v-for="(item, index) in items">
            {{ item.name}} - {{ item.distance }}
            <button type="button" v-on:click="remove(index)">Usuń</button>
        </div>
        
        <div>
            <select v-model="nameToAdd">
                <option v-for="country in availableCountryNames">{{ country }}</option>
            </select>
            <input v-model="distanceToAdd" type="number"/>
            <button type="button" v-on:click="add">Dodaj</button>
        </div>
    </div>
</script>